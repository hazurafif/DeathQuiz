<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.deathquiz">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ForgotPassword"></activity>
        <activity android:name=".AccountInformationFirebase" />
        <activity android:name=".VerifyActivity" />
        <activity android:name=".Register" />
        <activity
            android:name=".AccountInformation"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".CategoryActivityAccount" />
        <activity android:name=".MainActivityGuest" />
        <activity android:name=".LoginOption" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".ScoreActivity" />
        <activity android:name=".QuestionActivity" />
        <activity android:name=".SetsActivity" />
        <activity
            android:name=".CategoryActivity"
            android:parentActivityName=".MainActivityGuest"/>
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:parentActivityName=".LoginOption">
        </activity>
    </application>

</manifest>